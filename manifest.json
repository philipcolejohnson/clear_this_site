{
  "name": "Clear This Site!",
  "version": "1.0",
  "description": "Clear This Site! deletes all data only from the current site.",
  "permissions": [
    "activeTab",
    "browsingData",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/trash-16.png",
      "32": "images/trash-32.png",
      "48": "images/trash-48.png",
      "128": "images/trash-128.png"
    }
  },
  "icons": {
    "16": "images/trash-16.png",
    "32": "images/trash-32.png",
    "48": "images/trash-48.png",
    "128": "images/trash-128.png"
  },
  "manifest_version": 2
}