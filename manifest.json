{
  "manifest_version": 3,
  "name": "Clear This Site!",
  "version": "2.2.0",
  "author": "Philip Cole Johnson",
  "homepage_url": "https://github.com/philipcolejohnson/clear_this_site",
  "description": "Make the current website forget you by deleting all data and cookies, without disrupting other browsing.",
  "permissions": [
    "tabs",
    "browsingData",
    "storage",
    "commands"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Clear data for this site"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Clear This Site!",
    "default_icon": {
      "16": "images/inactive-16.png",
      "32": "images/inactive-32.png",
      "48": "images/inactive-48.png",
      "128": "images/inactive-128.png"
    }
  },
  "icons": {
    "16": "images/inactive-16.png",
    "32": "images/inactive-32.png",
    "48": "images/inactive-48.png",
    "128": "images/inactive-128.png"
  }
}
