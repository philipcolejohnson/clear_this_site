{
  "name": "Clear This Site!",
  "version": "2.0.0",
  "author": "Philip Cole Johnson",
  "description": "Clear This Site! deletes all data from the current site only.",
  "permissions": [
    "activeTab",
    "browsingData",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Clear This Site!",
    "default_icon": {
      "16": "images/inactive-16.png",
      "32": "images/inactive-32.png",
      "48": "images/inactive-48.png",
      "128": "images/inactive-128.png"
    }
  },
  "icons": {
    "16": "images/inactive-16.png",
    "32": "images/inactive-32.png",
    "48": "images/inactive-48.png",
    "128": "images/inactive-128.png"
  },
  "manifest_version": 3
}
