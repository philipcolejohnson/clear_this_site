{
  "name": "Clear This Site!",
  "version": "1.0.0",
  "author": "Philip Cole Johnson",
  "description": "Clear This Site! deletes all data only from the current site.",
  "permissions": [
    "activeTab",
    "browsingData",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Clear This Site!",
    "default_icon": {
      "16": "images/trash-16.png",
      "32": "images/trash-32.png",
      "48": "images/trash-48.png",
      "128": "images/trash-128.png"
    }
  },
  "icons": {
    "16": "images/trash-16.png",
    "32": "images/trash-32.png",
    "48": "images/trash-48.png",
    "128": "images/trash-128.png"
  },
  "manifest_version": 2
}